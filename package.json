  "license": "MIT",
  "bugs": {
    "url": "https://todo.sr.ht/~ayoayco/web-component-base"
  },
  "homepage": "https://git.sr.ht/~ayoayco/web-component-base#readme",
  "devDependencies": {
    "typescript": "^5.2.2"
  }
}
