{
  "name": "web-component-base",
  "version": "1.6.5",
  "description": "Minimal base class for creating reactive custom elements easily",
  "main": "index.d.ts",
  "scripts": {
    "start": "npx simple-server .",
    "build": "tsc --allowJs src/* --outDir dist --declaration",
